{
  "name": "@groveengine/ui",
  "version": "0.2.0",
  "description": "Grove Design System - A calm, organic component library for the Grove platform",
  "type": "module",
  "license": "MIT",
  "author": "AutumnsGrove",
  "repository": {
    "type": "git",
    "url": "https://github.com/AutumnsGrove/GroveUI.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "svelte",
    "sveltekit",
    "design-system",
    "components",
    "tailwind",
    "grove",
    "ui"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./ui": {
      "types": "./dist/components/ui/index.d.ts",
      "svelte": "./dist/components/ui/index.js",
      "default": "./dist/components/ui/index.js"
    },
    "./gallery": {
      "types": "./dist/components/gallery/index.d.ts",
      "svelte": "./dist/components/gallery/index.js",
      "default": "./dist/components/gallery/index.js"
    },
    "./editor": {
      "types": "./dist/components/editor/index.d.ts",
      "svelte": "./dist/components/editor/index.js",
      "default": "./dist/components/editor/index.js"
    },
    "./gutter": {
      "types": "./dist/components/gutter/index.d.ts",
      "svelte": "./dist/components/gutter/index.js",
      "default": "./dist/components/gutter/index.js"
    },
    "./primitives/*": {
      "types": "./dist/components/primitives/*/index.d.ts",
      "svelte": "./dist/components/primitives/*/index.js",
      "default": "./dist/components/primitives/*/index.js"
    },
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "default": "./dist/tokens/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    },
    "./styles": "./dist/styles/grove.css",
    "./styles/tokens": "./dist/styles/tokens.css",
    "./styles/content": "./dist/styles/content.css",
    "./tailwind": "./dist/tailwind.preset.js"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:package": "svelte-kit sync && svelte-package -o dist",
    "package": "svelte-kit sync && svelte-package -o dist",
    "prepublishOnly": "pnpm run package",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "peerDependencies": {
    "svelte": "^5.0.0",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "bits-ui": "^1.0.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "tailwind-variants": "^0.3.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-cloudflare": "^4.8.0",
    "@sveltejs/kit": "^2.8.0",
    "@sveltejs/package": "^2.3.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tailwindcss/typography": "^0.5.15",
    "autoprefixer": "^10.4.20",
    "lucide-svelte": "^0.460.0",
    "postcss": "^8.4.49",
    "svelte": "^5.2.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.0",
    "vite": "^5.4.21",
    "vitest": "^2.0.0"
  }
}
